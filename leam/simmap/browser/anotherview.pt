<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="SimMap">
<head>
<metal:block fill-slot="javascript_head_slot">

<!-- google key configured in control panel -->
<script type="text/javascript" src=""
    tal:attributes="src string:http://maps.google.com/maps/api/js?sensor=false">
</script>

<script type="text/javascript">
//<![CDATA[

    window.onload = function() {
        var divmap = document.getElementById('map_canvas');
        var outer_map = document.getElementById('map_canvas');
        var ctr = new google.maps.LatLng(40.11254201209941, -88.24356079101562);
        var options = {zoom: 11, center: ctr, mapTypeId: google.maps.MapTypeId.ROADMAP};
        var map = new google.maps.Map(divmap, options);
        google.maps.event.addDomListener(outer_map, "mouseover", function() {
          map.setOptions({mapTypeControl: true});
          map.setOptions({navigationControl: true});
        });
        google.maps.event.addDomListener(outer_map, "mouseout", function() {
          map.setOptions({mapTypeControl: false});
          map.setOptions({navigationControl: false});
        });
        jq('.portletNavigationTree').slideUp(3000, function () {
            jq('.portlet').slideDown(1000);
        });
    }

//]]>
</script>
</metal:block>
<title></title>
</head>

