<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n" lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="leam.simmap">
<head>
  <metal:block fill-slot="top_slot"
    tal:define="dummy python:request.set('disable_border',0);
                portal_state context/@@plone_portal_state;
                portal_url portal_state/portal_url" />
    <metal:block metal:fill-slot="javascript_head_slot">

      <!--
      <script src='http://maps.google.com/maps?file=api&amp;v=2&amp;key=ABQIAAAA01-FfVbmG9RcrCarzrnSPxQhOr6KWfzjyj-oR0i6-lITXbPO1RSgvBIyihUF9BdCDtDjETkmziVHDQ'>
      </script>
      -->
      <script src="http://maps.googleapis.com/maps/api/js?v=3.6&amp;sensor=false"></script>
      <script type="text/javascript" src="http://leam5.incubator.uiuc.edu/jefft/openlayers/lib/OpenLayers.js">
      <script type="text/javascript" src="http://leam5.incubator.uiuc.edu/jefft/openlayers/examples/google-v3.js">
            // tal:attributes="src string:$portal_url/OpenLayers.js">
      </script>

      <script type="text/javascript">
          jq(window).bind('load', function() {
              var mapserv = document.getElementById('map_mapserver').innerHTML;
              var mappath = document.getElementById('map_mappath').innerHTML;
              var title = document.getElementById('map_title').innerHTML;
              var trans = document.getElementById('map_transparency').innerHTML;
              var zoom = document.getElementById('map_zoom').innerHTML;
              var ll = document.getElementById('map_latlong').innerHTML;
              var arr = ll.split(' ');
              var lat = arr[0];
              var lon = arr[1];

              var options = {
                  projection: "EPSG:900913",
                  //allOverlays: true,
                  };
              map = new OpenLayers.Map('map', options);
              map.addControl(new OpenLayers.Control.LayerSwitcher());

              var blayer = new OpenLayers.Layer.Google("Google Map",
                  {sphericalMercator: true});
              //var osm = new OpenLayers.Layer.OSM("Simple OSM");
              
              var simmap = new OpenLayers.Layer.WMS( title,
                  mapserv,
                  { "map": mappath, 
                    sphericalMercator: true,
                    transparent: true, 
                    format: "image/png",
                    layers: "final4",
                  },
                  { 
                    isBaseLayer: false, 
                    opacity: trans,
                  });

              map.addLayers([blayer, simmap]);

              map.setCenter(new OpenLayers.LonLat(lon, lat).transform(
                 new OpenLayers.Projection("EPSG:4326"),
                 map.getProjectionObject()), zoom);    
              }
          );
      </script>
  </metal:block>

</head>

<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">

    <div tal:replace="structure provider:plone.abovecontenttitle" />

    <h1 class="documentFirstHeading">
      <metal:field use-macro="python:here.widget('title', mode='view')" />
    </h1>

    <div tal:replace="structure provider:plone.belowcontenttitle" />
    
    <p class="documentDescription" style="display:none">
      <metal:field use-macro="python:here.widget('description', mode='view')"/>
    </p>

    <div tal:replace="structure provider:plone.abovecontentbody" />

    <div id="map" class="olMap" style="width:100%;height: 500px;">
                <!-- openlayers map -->
    </div>
    <div id="map_parameters" style="display:none;">
      <div id="map_mapserver" tal:content="view/mapserver" />
      <div id="map_mappath" tal:content="python:here.getMapPath()" />
      <div id="map_title" tal:content="context/title_or_id" />
      <div id="map_transparency" tal:content="context/transparency" />
      <div id="map_latlong" tal:content="context/latlong" />
      <div id="map_zoom" tal:content="python:here.getZoom()" />
      
    </div>

    <p id="request">request</p>
    <p class="documentDescription">
      <metal:field use-macro="python:here.widget('details', mode='view')"/>
    </p>
        
    <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>
